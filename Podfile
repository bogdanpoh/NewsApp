    pod 'RxSwift', '~> 5.0'
    pod 'RxCocoa', '~> 5.0'
    
    # Async
    pod "PromiseKit", "~> 6.8"
    
    # Resources
    pod 'R.swift', "~> 6.1.0"
    pod 'Kingfisher', '~> 7.3.0'
    
end

target 'NewsAppWatch WatchKit Extension' do
  platform :watchos, '8.0'
  
  # Resources
  pod 'R.swift', "~> 6.1.0"
  
end
